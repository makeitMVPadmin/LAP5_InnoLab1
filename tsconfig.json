// this file was created so "import React from 'react';" would not be necessary for .tsx files
{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES6",                       // Use ES6 or higher
    "module": "ESNext",                    // Use ESNext for modern module syntax
    "moduleResolution": "node",   
  }
}
